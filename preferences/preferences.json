{
    "id": "fsmst",
    "name": "FSM ST",
    "schema": {
        "fsmst.gen": {
            "text": "Finite Statemachine ST generator",
            "type": "section"
        },
        "fsmst.gen.target": {
            "text": "Target",
            "description": "For which platform it should be generated",
            "type": "dropdown",
            "width": 450,
            "default": "st",
            "options": [
                {
                    "value": "st",
                    "text": "Generic ST"
                },
                {
                    "value": "brst",
                    "text": "B&R ST"
                },
                {
                    "value": "scl",
                    "text": "Siemens SCL"
                }
            ]
        },
        "fsmst.gen.showComplete": {
            "text": "Show complete",
            "description": "Show dialog after code generation.",
            "type": "check",
            "default": true
        },
        "fsmst.gen.outputFormat": {
            "text": "Output",
            "description": "EJS template string for file output",
            "type": "string",
            "width": 450,
            "default": "out/<%=element.name%>.st"
        }
    }
}
